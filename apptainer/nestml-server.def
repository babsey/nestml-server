Bootstrap: docker
From: ubuntu:22.04

%labels
  AUTHOR Sebastian Spreizer <spreizer@web.de>

%files
  requirements.txt

%post
  apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    libgsl0-dev \
    libltdl7-dev \
    libncurses5-dev \
    libreadline6-dev \
    python3-pip

  python3 -m pip install -r requirements.txt
  python3 -m pip install nestml
